<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ibeifeng.ssm.mapper.UserMapper">
<!--<mapper namespace="com.ibeifeng.ssm.model.User">-->
    <!-- 保存用户-->
    <insert id="add" parameterType="User">
        insert into t_user(name,password) values(#{name},#{password});
    </insert>
    <!-- 修改用户-->
    <update id="update" parameterType="User">
        update t_user set name=#{name},password=#{password} where id=#{id}
    </update>
    <!-- 删除用户-->
    <delete id="del" parameterType="int">
        delete from t_user where id = #{id}
    </delete>
    <!-- 查询单个用户-->
    <select id="load" parameterType="int" resultType="User">
        select * from t_user where id=#{id}
    </select>
    <!-- 查询用户列表-->
    <select id="list" resultType="User">
        select * from t_user
    </select>
</mapper>